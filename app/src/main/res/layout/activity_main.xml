<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.adi.pruebalocalizacion.MainActivity">

    <TextView
        android:id="@+id/message_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:text="Latitud" />

    <TextView
        android:id="@+id/message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:text="Longitud" />

    <TextView
        android:id="@+id/txtConador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contador"/>
    <TextView
        android:id="@+id/Contador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtConador"/>
    <TextView
        android:id="@+id/mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Contador"
        android:text="Mensaje aqui"/>

</RelativeLayout>
